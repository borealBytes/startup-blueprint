[flake8]
# Match Black's line length
max-line-length = 100

# Ignore errors that Black handles
ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (Black handles this)
    W503,  # line break before binary operator

# Exclude directories
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    node_modules,
    dist,
    build,
    *.egg-info,
    .pytest_cache,
    .mypy_cache,
    .ruff_cache

# Per-file ignores for specific patterns
per-file-ignores = 
    __init__.py:F401,  # Allow unused imports in __init__ files
    conftest.py:F401,  # Allow unused imports in pytest conftest
    test_*.py:F401,F841  # Allow unused imports and variables in tests
